<!DOCTYPE html>
<html>
	<head>
		{%block include%}
		<meta charset="UTF-8" />
		<title>{% block title %} {% endblock %}</title>
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		<link href="/NarratioWeb/webress/css/star-rating.css" media="all" rel="stylesheet" type="text/css" />
		<link href="/NarratioWeb/webress/css/theme-krajee-svg.css" media="all" rel="stylesheet" type="text/css" />
		{%endblock%}
	</head>
	<body>
		<!-- CONTAINER 1 | header-->
		<div class="container">
			<!-- Premiere ligne: état de la connexion de l'utilisateur -->
			<div class="row">
				<div class="col-lg-12">
					{% block header2 %}
						<div id="user" style='float:right;'>
						{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					    <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
						{% else %}
						<a href="{{ path ('fos_user_security_login') }}">Connexion</a>
						<br/>
						<a href="{{ path ('fos_user_registration_register') }}">Inscription</a>
						{% endif %}
						</div>
					{% endblock %}
				</div>
			</div>
		</div>
		<!-- CONTAINER 2 | body et footer -->
		<div class="container">
			<!-- bloc central -->
			<div class="row">
				<div class="col-lg-12">
					{% block header1 %}
					<a href="http://narratioweb-haize.c9users.io/NarratioWeb/web/app_dev.php/accueil" class="no-underline" id="titre">
						<h1><big><big>NarratioWeb</big></big></h1>
					</a>
					{% endblock %}
				</div>
				<div class="col-lg-12" >
					{% block body %} 
					{% endblock %}
				</div>
			</div>
			<!-- pied de page -->
			<div class="row">
				<div class="col-lg-12" id="footer">
					{% block footer %}
					<div style='float:left;'>
						Projet NarratioWeb dans le cadre du DUT Informatique.
					</div>
					<div style='float:right;'>&copy; IUT Bayonne Pays Basque</div>
					<div align="center">
						<a href= "https://www.iutbayonne.univ-pau.fr/"> IUT de Bayonne et du Pays Basque </a>
					</div>
					{% endblock %}
				</div>
			</div>
		</div>
		{% block javascripts %}{% endblock %}
		<body style="background-color: #DED9B7">
	</body>
</html>