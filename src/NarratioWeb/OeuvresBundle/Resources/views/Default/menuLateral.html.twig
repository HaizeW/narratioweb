{% block include %}
    <script src="{{ asset('js/jquery/jquery.tokeninput.js') }}"></script> <!-- You have to apply the fix https://github.com/loopj/jquery-tokeninput/pull/172/files for tokeninput to get it work!! -->
    {{ form_javascript(form) }}
{% endblock %}
<div class="panel panel-default">
   <div id=menu class="panel-heading">Menu</div>
   <div class="panel-body">
      <div class=row>
         <div class="col-lg-9">
            <form action="{{ path('narratio_web_oeuvres_homepage') }}" method="post">
               <center>
                  <div class="ui-widget">
                     {{form_widget(formulaireRechercheNominale.nom)}}
                  </div>
         </div>
         <div class="col-lg-3">
         <button name="action-type" style="background-color: #7D3232; color: white;" value="Rechercher" type="submit" class="btn btn-default">
         <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
         </button>
         </div>
         </center>
         </form>
      </div>
      <div class ="panel panel-default" >
         <div class= "panel-heading" style="background-color: #DED9B7;">
            Oeuvres les plus récentes
         </div>
         <div class="list-group">
            {% for oeuvreCourante in tabOeuvreNew %}
            <a href="{{path('narratio_web_oeuvres_oeuvreMenu', {'id':oeuvreCourante.id})}}" class="list-group-item"> {{oeuvreCourante.nom}} </a>
            {%else%}
            Aucune nouveauté
            {% endfor %}
         </div>
      </div>
      <div class ="panel panel-default">
         <div class= "panel-heading" style="background-color: #DED9B7;">
            Oeuvres les plus vues
         </div>
         <div class="list-group">
            {% for oeuvreCourante in tabOeuvreVues %}
            <a href="{{path('narratio_web_oeuvres_oeuvreMenu', {'id':oeuvreCourante.id})}}" class="list-group-item"> {{oeuvreCourante.nom}} </a>
            {%else%}
            Aucune donnée
            {%endfor%}
         </div>
      </div>
   </div>
</div>